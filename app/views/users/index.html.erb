<h1>Listing users</h1>

  <% if notice %>
        <p id="notice"><%= notice %></p>
  <% end %>


<table>
<% @users.each do |user| %>
  <tr class="<%= cycle('list_line_odd', 'list_line_even') %>">
    <td><%= user.id %></td>
    <td><b>Name:</b> <%= user.name %> <br />
        <b>Email:</b> <%= user.email %> <br />
    </td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>

